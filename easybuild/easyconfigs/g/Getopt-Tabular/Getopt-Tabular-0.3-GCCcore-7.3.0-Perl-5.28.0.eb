easyblock = 'PerlModule'

name = 'Getopt-Tabular'
version = '0.3'

homepage = 'https://metacpan.org/release/Getopt-Tabular'
description = "Getopt::Tabular - table-driven argument parsing for Perl 5"

toolchain = {'name': 'GCCcore', 'version': '7.3.0'}

source_urls = ['https://cpan.metacpan.org/authors/id/G/GW/GWARD']
sources = [SOURCE_TAR_GZ]

perl = 'Perl'
perlver = '5.28.0'
versionsuffix = '-%s-%s' % (perl, perlver)

dependencies = [
    (perl, perlver),
]

options = {'modulename': 'Getopt::Tabular'}

perlmajver = perlver.split('.')[0]
sanity_check_paths = {
    'files': ['lib/perl%s/site_perl/%s/Getopt/Tabular.pm' % (perlmajver, perlver)],
    'dirs': [],
}

moduleclass = 'data'
