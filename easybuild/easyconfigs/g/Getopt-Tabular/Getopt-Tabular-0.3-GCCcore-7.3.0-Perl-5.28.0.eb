easyblock = 'PerlModule'

name = 'Getopt-Tabular'
version = '0.3'
versionsuffix = '-Perl-%(perlver)s'

homepage = 'https://metacpan.org/release/Getopt-Tabular'
description = "Getopt::Tabular - table-driven argument parsing for Perl 5"

toolchain = {'name': 'GCCcore', 'version': '7.3.0'}

source_urls = ['https://cpan.metacpan.org/authors/id/G/GW/GWARD']
sources = [SOURCE_TAR_GZ]
checksums = ['9bdf067633b5913127820f4e8035edc53d08372faace56ba6bfa00c968a25377']

builddependencies = [('binutils', '2.30')]

dependencies = [
    ('Perl', '5.28.0'),
]

options = {'modulename': 'Getopt::Tabular'}

sanity_check_paths = {
    'files': ['lib/perl5/site_perl/%(perlver)s/Getopt/Tabular.pm'],
    'dirs': [],
}

moduleclass = 'data'
